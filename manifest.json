{
  "manifest_version": 3,
  "name": "Better Quote Tweets",
  "version": "1.0",
  "description": "Adds a quote tweet button with search fallback",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}